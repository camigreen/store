<?xml version="1.0" encoding="utf-8"?>
<form>
	<name>receipt</name>
	<title>Receipt</title>
	<grid>1</grid>
	<margins>
		<left>0</left>
		<right>0</right>
		<top>0</top>
		<bottom>0</bottom>
	</margins>
	<font>
		<family>arial</family>
		<style></style>
		<size>8</size>
	</font>
	<company>
		<companyname>Laportes T-Top Boat Covers</companyname>
		<address>
			<street>4651 Franchise Street</street>
			<city>North Charleston</city>
			<state>SC</state>
			<zip>29418</zip>
		</address>
		<phone>(843) 760-6101</phone>
		<website>http://www.ttopcovers.com</website>
		<email>info@ttopcovers.com</email>
		<logoPath>images/logos/ttop/TTop_100x100.png</logoPath>
	</company>
	<pages>
		<page>
			<name>1</name>
			<fields>
				<field x="145" y="8" h="10" w="60" font-size="30" font-style="B" all-caps="1" align="R">
					<name>form_title</name>
					<type>textbox</type>
				</field>
				<field x="35" y="10" h="5" w="80" font-size="12" font-style="B">
					<name>companyname</name>
					<type>textbox</type>
				</field>
				<field x="35" y="15" h="35" w="80" line-height="4">
					<name>companyaddress</name>
					<type>textbox</type>
				</field>
				<field x="10" y="45" h="30" w="75" border="1">
					<name>billto</name>
					<type>textbox</type>
					<title align="T" text-align="C" border="1" font-style="B">Bill To</title>
				</field>
				<field x="130" y="45" h="30" w="75" border="1">
					<name>shipto</name>
					<type>textbox</type>
					<title align="T" text-align="C" border="1" font-style="B">Ship To</title>
				</field>
				<field x="10" y="10" h="25" w="25" border="0">
					<name>logo</name>
					<type>logo</type>
				</field>
				<field x="175" y="20" h="5" w="30" align="R">
					<name>order_date</name>
					<type>textbox</type>
					<title align="L" text-align="R">Order Date:</title>
				</field>
				<field x="185" y="245" h="5" w="20" align="C">
					<name>subtotal</name>
					<type>textbox</type>
					<title align="L" text-align="R">Subtotal</title>
				</field>
				<field x="185" y="250" h="5" w="20">
					<name>shipping</name>
					<type>textbox</type>
					<title align="L" text-align="R">Shipping</title>
				</field>
				<field x="185" y="255" h="5" w="20">
					<name>taxes</name>
					<type>textbox</type>
					<title align="L" text-align="R">Taxes</title>
				</field>
				<field x="185" y="260" h="5" w="20">
					<name>total</name>
					<type>textbox</type>
					<title align="L" text-align="R">Total</title>
				</field>
				<field x="10" y="80" rows="1" w="195">
					<name>order_details</name>
					<type>table</type>
					<title>Order Details</title>
					<columns>
						<column w=".25">
							<name>salesperson</name>
							<header>Salesperson</header>
						</column>
						<column w=".25">
							<name>order_number</name>
							<header>Order Number</header>
						</column>
						<column w=".25">
							<name>delivery_method</name>
							<header>Delivery Method</header>
						</column>
						<column w=".25">
							<name>payment_information</name>
							<header>Payment Information</header>
						</column>
					</columns>
				</field>
				<field x="10" y="95" rows="30" w="195">
					<name>items</name>
					<type>table</type>
					<title>Items</title>
					<columns>
						<column w=".70">
							<name>name</name>
							<header>Item Description</header>
							<footer></footer>
						</column>
						<column w=".15">
							<name>qty</name>
							<header>Qty</header>
							<footer border="1"></footer>
						</column>
						<column w=".15">
							<name>price</name>
							<header>Unit Price</header>
							<footer>
								
							</footer>
						</column>
					</columns>
				</field>
			</fields>
		</page>
	</pages>
</form>